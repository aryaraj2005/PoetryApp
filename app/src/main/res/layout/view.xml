<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="20dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#EBEAE6"
    android:background="@color/white"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60sp"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:text="mohabbat meñ nahīñ hai farq jiine aur marne kā
usī ko dekh kar jiite haiñ jis kāfir pe dam nikle "
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        android:id="@+id/poetData_text"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30sp"
        android:paddingStart="3dp"
        android:paddingEnd="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/mirza_galib"
        android:gravity="center_vertical|end"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"
        android:id="@+id/poetname_text"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
        android:textColor="@color/black"
        android:minHeight="30sp"
        android:textStyle="bold"
        android:paddingStart="3dp"
        android:paddingEnd="5dp"
        android:textSize="16sp"
        android:text="@string/_12_09_2023"
        android:layout_marginBottom="5dp"
        android:id="@+id/datetime_text"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
  <Button
      android:layout_width="match_parent"
      android:textAllCaps="false"
      android:textColor="@color/black"
      android:text="update"
      android:background="@drawable/buttondesing"
      android:id="@+id/updatebtn"
      android:layout_marginEnd="5dp"
      android:layout_weight="1"
      android:textSize="16dp"
      android:layout_height="wrap_content"/>
    <Button
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:text="delete"
        android:background="@drawable/buttondesing"
        android:id="@+id/deletbtn"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>

</LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>